    "@tsconfig/node14": "^1.0.1",
    "@types/node": "14",
    "esbuild": "^0.14.27",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.0"
  }
}
